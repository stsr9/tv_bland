{
  "name": "tv-bland",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@cypress/browserify-preprocessor": "^3.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/dompurify": "^2.2.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-test-renderer": "^17.0.1",
    "axios": "^0.21.1",
    "cross-env": "^7.0.3",
    "cypress": "^8.2.0",
    "cypress-plugin-snapshots": "1.4.3",
    "dompurify": "^2.3.0",
    "font-awesome": "^4.7.0",
    "husky": "^7.0.1",
    "i18next": "^20.4.0",
    "lint-staged": "^11.1.2",
    "node-sass": "4.14.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.11.4",
    "react-rating": "^2.0.5",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-test-renderer": "^17.0.2",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "cross-env CI=true yarn test"
    }
  },
  "lint-staged": {
    "cypress/**/*.{js}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx,scss,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "bracketSpacing": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
